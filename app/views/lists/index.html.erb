<div id="banner">
  <h1>Here is your list of movies</h1>
  <h3>Grab some popcorn and choose one for tonight</h3>
</div>

<div class="container">
  <h1 class="mt-3 mb-3">My list</h1>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card mt-3 mb-3 bg-secondary">
          <% if list.photo.attached? %>
          <%= cl_image_tag list.photo.key, height: 250, crop: :fill %>
          <% else %>
          <%= image_tag "/app/assets/images/Movie_Park_Germany_Logo.png" %>
          <% end %>
          <div class="card-body d-flex justify-content-center">
            <%= link_to "#{list.name}", list_path(list), class: "card-title text-light" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "create a new movie list", new_list_path, class: "btn btn-light mt-3 mb-3" %>
</div>