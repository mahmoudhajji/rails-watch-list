<div class="container mt-3">
  <h1><%= @list.name.upcase %></h1>

  <div class="row">
    <% @list.movies.each do |movie| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card mt-3 mb-3 bg-light text-dark">
          <img src="<%= movie.poster_url %>" >
          <div class="card-header">
            <h2><%= movie.title %></h2>
            <p>Rating - <%= movie.rating %></p>
          </div>
          <div class="card-body">
            <p><%= movie.overview %></p>
            <p><%= movie.bookmarks.first.comment %></p>
            <%= link_to "Delete Bookmark", bookmark_path(Bookmark.find_by(movie: movie, list: @list)), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-light mt-3 mr-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Back to main page", lists_path, class: "btn btn-light mt-3" %>
  <%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-light mt-3 mr-3" %>
</div>